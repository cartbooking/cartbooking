{% extends "base.twig" %}

{% block title %}{{ title }}{% endblock %}
{% block content %}
  <div class="w-section section">
    <div class="map">
      <h1>{{ location_name }}</h1>
      <a target='_blank' href='{{ anchor_href }}'>
        <img src='{{ img_href }}'>
      </a>
    </div>
    <div class="row">
      <div class="locDesc">
        <div class="panel panel-default">
          <div class="panel-heading">Relevant Information</div>
          <div class="panel-body">
            {% markdown %}
            {{ location_description }}
            {% endmarkdown %}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

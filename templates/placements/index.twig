{% extends "base.twig" %}
{% block title %}Metropolitan Witnessing{% endblock %}
{% block content %}
  <div class="w-section section">
    <div class="content-mobile-number"><img class="carty" src="../images/happy-13.svg">
      <div class="login-div" id="container"><img class="leaf" src="../images/leaf-11.svg">
        <div class="sign-in-text">Placements</div>
        <div class="w-dropdown locations" data-delay="0">
          <div class="w-dropdown-toggle dropdown">
            <div>Select Shifts</div>
            <div class="w-icon-dropdown-toggle"></div>
          </div>
          <nav class="w-dropdown-list droplist">
            {% if bookings is empty %}<a class="w-dropdown-link" href="#">None</a>{% endif %}
            {% for booking in bookings %}
              <a class='w-dropdown-link' href='/placements/{{ booking.booking_id }}'>
                {{ booking.display_date }}, {{ booking.location_name }} {{ booking.display_time }}
              </a>
            {% endfor %}
          </nav>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
